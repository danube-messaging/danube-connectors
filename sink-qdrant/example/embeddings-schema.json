{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "VectorEmbedding",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Optional point ID for Qdrant"
    },
    "vector": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "minItems": 1,
      "description": "Vector embedding array"
    },
    "payload": {
      "type": "object",
      "description": "Additional metadata"
    }
  },
  "required": ["vector"]
}
