{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Event",
  "description": "Schema for event messages sent to Danube",
  "type": "object",
  "properties": {
    "event_type": {
      "type": "string",
      "description": "Type of event (e.g., purchase, user_login, page_view)"
    },
    "user_id": {
      "type": "string",
      "description": "Unique user identifier"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Event timestamp in ISO 8601 format"
    },
    "product": {
      "type": "string",
      "description": "Product name (for purchase events)"
    },
    "amount": {
      "type": "integer",
      "description": "Amount in cents (for purchase events)"
    },
    "currency": {
      "type": "string",
      "description": "Currency code (e.g., USD, EUR)"
    }
  },
  "required": ["event_type", "user_id", "timestamp"]
}
