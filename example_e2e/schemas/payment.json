{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Webhook Payment Event Schema",
  "description": "Schema for validating webhook payment events (Stripe-style)",
  "required": ["event", "amount", "currency", "timestamp"],
  "properties": {
    "event": {
      "type": "string",
      "description": "Event type",
      "enum": [
        "payment.succeeded",
        "payment.failed",
        "payment.canceled",
        "payment.refunded"
      ]
    },
    "amount": {
      "type": "integer",
      "description": "Payment amount in cents",
      "minimum": 0
    },
    "currency": {
      "type": "string",
      "description": "Currency code (ISO 4217)",
      "pattern": "^[A-Z]{3}$",
      "examples": ["USD", "EUR", "GBP"]
    },
    "customer_id": {
      "type": "string",
      "description": "Customer identifier",
      "pattern": "^cus_"
    },
    "timestamp": {
      "type": "integer",
      "description": "Unix timestamp when event occurred"
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata"
    }
  }
}
